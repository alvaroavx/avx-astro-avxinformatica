---
import avxLogo from '../assets/avx-logo.png';
import universeBackground from '../assets/universe.jpg';
import HudPanel from './HudPanel.astro';
---

<div class="universe" style={`--bg-url: url(${universeBackground.src});`}>
  <!-- Logo flotando (sol) -->
  <div class="sun">
    <img class="spin" src={avxLogo.src} alt="AVX" />
  </div>

  <!-- Texto dentro del visor -->
  <HudPanel
    title="AVX Informática"
    subtitle="Soluciones tecnológicas a tu alcance"
    maxWidth="560px"
    color="#00ff80"
    opacity={0.10}
  >
    <a href="mailto:alvaro@avx.cl" target="_blank" rel="noopener noreferrer">Contáctame</a>
  </HudPanel>
</div>
