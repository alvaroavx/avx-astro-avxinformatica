<div class="universe">
  <!-- Sol: logo AVX -->
  <div class="sun">
    <img src="/assets/avx-logo.png" alt="AVX" />
  </div>

  <!-- Órbitas con planetas -->
  <div class="orbit orbit1">
    <img src="/skybox/lava.png" class="planet" alt="Servicios" />
  </div>
  <div class="orbit orbit2">
    <img src="/skybox/pink.png" class="planet" alt="Proyectos" />
  </div>
  <div class="orbit orbit3">
    <img src="/skybox/blue.png" class="planet" alt="Contacto" />
  </div>
  <div class="orbit orbit4">
    <img src="/skybox/lava.png" class="planet" alt="Nosotros" />
  </div>
</div>

<script type="module" client:load>
  // Al hacer clic, navega a la sección correspondiente
  document.querySelectorAll('.planet').forEach((planet) => {
    planet.addEventListener('click', () => {
      const ruta = planet.alt.toLowerCase();
      window.location.href = `/${ruta}`;
    });
  });
</script>

<style global>
  /* Reset y contenedor */
  * { margin:0; padding:0; box-sizing:border-box; }
  html, body { width:100%; height:100%; overflow:hidden; }
  .universe {
    position: relative;
    width:100vw; height:100vh;
    background: url('/skybox/universe.jpg') center/cover no-repeat;
  }

  /* Sol en el centro */
  .sun {
    position:absolute;
    top:50%; left:50%;
    transform: translate(-50%,-50%);
    width: 120px;
  }
  .sun img { width:100%; }

  /* Órbitas elípticas */
  .orbit {
    position:absolute;
    top:50%; left:50%;
    transform-origin: center center;
    border:1px dashed rgba(255,255,255,0.2);
    border-radius:50%;
    animation: spin linear infinite;
  }
  .orbit1 { width:200px; height:150px; animation-duration:12s; }
  .orbit2 { width:300px; height:200px; animation-duration:16s; }
  .orbit3 { width:400px; height:250px; animation-duration:20s; }
  .orbit4 { width:500px; height:300px; animation-duration:24s; }

  /* Planeta siempre en “arriba” de la órbita */
  .planet {
    position:absolute;
    top:0; left:50%;
    transform: translateX(-50%);
    width: 80px;
    transition: transform .2s ease, filter .2s ease;
    cursor: pointer;
  }
  .planet:hover {
    transform: translateX(-50%) scale(1.2);
    filter: drop-shadow(0 0 10px rgba(255,255,255,0.8));
  }

  /* Animación de rotación */
  @keyframes spin {
    from { transform: translate(-50%,-50%) rotate(0deg); }
    to   { transform: translate(-50%,-50%) rotate(360deg); }
  }
</style>
